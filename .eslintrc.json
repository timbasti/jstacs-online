{
    "plugins": ["sort-keys-fix", "simple-import-sort", "import"],
    "extends": ["eslint:all", "plugin:react/all", "react-app"],
    "rules": {
        "padded-blocks": ["error", "never"],
        "quote-props": ["error", "as-needed"],
        "quotes": ["error", "single"],
        "sort-keys": "off",
        "sort-keys-fix/sort-keys-fix": ["error", "asc"],
        "one-var": ["error", "never"],
        "max-len": [
            "error",
            {
                "code": 130
            }
        ],
        "no-ternary": "off",
        "multiline-ternary": ["error", "always-multiline"],
        "no-extra-parens": [
            "error",
            "all",
            {
                "enforceForArrowConditionals": false
            }
        ],
        "no-magic-numbers": [
            "error",
            {
                "ignore": [-1, 0, 1, 2, 3],
                "ignoreArrayIndexes": true,
                "ignoreDefaultValues": true
            }
        ],
        "no-plusplus": "off",
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/function-component-definition": [
            "error",
            {
                "namedComponents": "arrow-function",
                "unnamedComponents": "arrow-function"
            }
        ],
        "function-paren-newline": ["error", "multiline"],
        "react/display-name": "off",
        "react/jsx-wrap-multilines": "off",
        "react/jsx-closing-bracket-location": ["error", "line-aligned"],
        "react/forbid-component-props": "off",
        "react/prop-types": [
            "error",
            {
                "skipUndeclared": true
            }
        ],
        "no-undefined": "off",
        "max-lines-per-function": [
            "error",
            {
                "max": 300,
                "skipComments": true,
                "skipBlankLines": true
            }
        ],
        "function-call-argument-newline": ["error", "consistent"],
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "array-element-newline": ["error", "consistent"],
        "no-mixed-operators": "off",
        "react/jsx-closing-tag-location": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "sort-imports": "off",
        "import/first": "error",
        "import/newline-after-import": "error",
        "import/no-duplicates": "error",
        "react/no-multi-comp": [
            "error",
            {
                "ignoreStateless": true
            }
        ],
        "react/jsx-no-literals": "off",
        //TODO: Try to change this to the default value before integrating production views
        "react/jsx-max-depth": [
            "error",
            {
                "max": 10
            }
        ],
        "react/jsx-handler-names": [
            "error",
            {
                "eventHandlerPropPrefix": false,
                "checkLocalVariables": true
            }
        ],
        "no-warning-comments": "off",
        //TODO: Set to error for production release and clean the project
        "max-lines": [
            "error",
            {
                "max": 500
            }
        ],
        "no-console": "off",
        "capitalized-comments": "off",
        "multiline-comment-style": "off",
        "react/jsx-props-no-spreading": [
            "error",
            {
                "custom": "ignore"
            }
        ],
        "prefer-destructuring": "off",
        "no-empty-function": "off",
        "max-statements": "off",
        "no-await-in-loop": "off",
        "max-params": [
            "error",
            {
                "max": 5
            }
        ],
        "array-bracket-newline": ["error", "consistent"],
        "react/jsx-newline": [
            "error",
            {
                "prevent": true
            }
        ],
        "arrow-body-style": "off",
        "react/forbid-prop-types": ["error", {"forbid": ["array", "object"]}]
    }
}
